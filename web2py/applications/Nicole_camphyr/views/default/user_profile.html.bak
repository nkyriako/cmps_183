{{extend 'layout.html'}}

{{block header}}

{{end}}


<h1> {{=username}}'s Profile </h1>


<div class="left_column" style="float:left;">

    {{if auth.user is not None:}}
            <!-- Youre going to put the photo here -->

    {{else:}}
        <img style="border:5px solid #4b5257"
               src="{{=URL('static', 'images', 'default_profile.jpeg')}}" height="200" width="200"/>
    {{pass}}
    <p>
    {{=get_user_about()}}
    </p>

    <a href="{{=URL('default', 'edit_profile')}}" class="btn large">Edit Profile</a>

</div>

<div class="right_column" style="float:left;">
    <h3>Recent stories {{=username}} added to:</h3>


    <h3>Standalone stories by {{=username}}:</h3>
    {{for name in db(db.bio_story.user_email == get_user_email()).select():}} <!--Selects all snippets in database with title-->
        <div id = 'story'>
            {{link = URL('default', 'user_story', vars = dict(title_name = name.title))}} <!--creates a link to the story-->
            <a href = '{{=link}}'>{{=name.title}}</div>
        </div>
    {{pass}}
    <a href = 'http://127.0.0.1:8000/camphyr/default/create_story' id = 'link'>Create new story...</a>
</div>

<div>
	<a href="{{=URL('default', 'index')}}" class="btn large">Return to Camphyr</a>
</div>
